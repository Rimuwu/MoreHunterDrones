<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Замороженные локации -->

  <!-- AncientRuinsFrozenChemfuelWorkshop - замороженная химмастерская -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/LayoutRoomDef[defName="AncientRuinsFrozenChemfuelWorkshop"]/parts</xpath>
    <value>
      <HunterDroneIncendiary>0.5</HunterDroneIncendiary>
      <HunterDroneToxic>0.3</HunterDroneToxic>
      <HunterDroneSmoke>0.3</HunterDroneSmoke>
      <HunterDroneEMP>0.2</HunterDroneEMP>
    </value>
  </Operation>

