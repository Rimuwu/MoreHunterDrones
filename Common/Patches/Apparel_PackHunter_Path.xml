<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_PackHunter"]/verbs/li/verbClass[text()="Verb_LaunchProjectileStaticOneUse"]</xpath>
    <value>
      <verbClass>MoreHunterDrones.Verbs.Verb_LaunchDrone</verbClass>
    </value>
  </Operation>


  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_PackHunter"]/verbs</xpath>
    <value>
        <li>
          <verbClass>MoreHunterDrones.Verbs.Verb_ChargeDronePack</verbClass>
          <label>charge pack</label>
          <onlyManualCast>true</onlyManualCast>
          <hasStandardCommand>true</hasStandardCommand>
          <targetable>false</targetable>
          <commandIcon>UI/ChargePack</commandIcon>
          <defaultCooldownTime>0</defaultCooldownTime>
          <warmupTime>0.0</warmupTime>
          <range>0</range>
          <requireLineOfSight>false</requireLineOfSight>
          <muzzleFlashScale>0</muzzleFlashScale>
          <burstShotCount>1</burstShotCount>
          <ticksBetweenBurstShots>0</ticksBetweenBurstShots>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_PackHunter"]/comps</xpath>
    <value>
      <comps>
        <li Class="MoreHunterDrones.Comps.CompProperties_ApparelIsCharged">
            <hotKey>Misc4</hotKey>
            <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
            <maxCharges>1</maxCharges>
            <destroyOnEmpty>false</destroyOnEmpty>
        </li>
        <li Class="MoreHunterDrones.Comps.CompProperties_ChargeDronePack">
            <chargeIngredients>
              <li>
                <key>ComponentIndustrial</key>
                <value>2</value>
              </li>
              <li>
                <key>Steel</key>
                <value>50</value>
              </li>
            </chargeIngredients>
        </li>
      </comps>
    </value>
  </Operation>

</Patch>
